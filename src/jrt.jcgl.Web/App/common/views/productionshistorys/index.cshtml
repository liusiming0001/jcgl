@using jrt.jcgl.Localization
<div ng-controller="common.views.productionshistorys.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("ProductionsHistory")</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>

    <div class="portlet light" >
        <div class="portlet-title portlet-title-filter">
            <div class="inputs inputs-full-width">
                <div class="portlet-input">
                    <form>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label">@L("ProductionsHistory.CreateUserName")</label>
                                    <input ng-model="vm.filterText" auto-focus class="form-control" placeholder="@L("SearchWithThreeDot")" type="text" ng-change="vm.getproductions()">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label">@L("Production.StartDate")</label>
                                    <input auto-focus class="form-control" placeholder="YYYY-MM-DD" type="date" ng-model="vm.date" ng-change="vm.getproductions()" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="portlet-body">
            <div busy-if="vm.loading">
                <div ui-grid="vm.productionplansGridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
            </div>
        </div>
    </div>
</div>

