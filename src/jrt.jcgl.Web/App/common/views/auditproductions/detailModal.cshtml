@using jrt.jcgl.Localization
<div>
    <form name="auditProductionPlanForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>@L("ProductionPlanDetail")</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-body">

                <h3 class="form-section">@L("ProductionPlan.Info")</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ProductionPlan.createUserName"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.productionPlan.productionPlan.createUserName}}
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ProductionPlan.demand"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.productionPlan.productionPlan.demand}}
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ProductionPlan.startDate"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.productionPlan.productionPlan.startDate}}
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ProductionPlan.auditStatus"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.productionPlan.productionPlan.auditStatus}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div busy-if="vm.loading">
                    <div ui-grid="vm.productionMainGridOptions" ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                </div>
                <div busy-if="vm.loading">
                    <div ui-grid="vm.productionPlanDetailsGridOptions" ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                </div>
                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                    <select class="form-control" ng-model="vm.type_selcet"
                            required>
                        <option value="0">同意</option>
                        <option value="1">不同意</option>
                    </select>
                    <label>审核</label>
                </div>
                <div class="form-group form-md-line-input form-md-floating-label no-hint" ng-show="vm.type_selcet==1">
                    <textarea type="text" class="form-control" ng-class="{'edited':vm.remark}" ng-model="vm.remark" ng-required="vm.type_selcet==1" style="height:100px;" />
                    <label>原因</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="vm.close()">@L("Close")</button>
                <button type="submit"
                        button-busy="vm.saving"
                        busy-text="@L("SavingWithThreeDot")"
                        class="btn btn-primary blue"
                        ng-click="vm.save()"
                        ng-disabled="auditProductionPlanForm.$invalid">
                    <i class="fa fa-save"></i>
                    <span>@L("Save")</span>
                </button>
            </div>
        </div>
    </form>
</div>